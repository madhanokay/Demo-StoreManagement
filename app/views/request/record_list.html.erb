<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="data_tables">
	<thead>
		<tr>
			<th> Sl.no</th>
			<th> User </th>
			<th> Position</th>
			<th> Cart Id</th>
			<th> Product Name</th>
			<th> Category </th>
			<th> Quantity</th>
			<th> Date of purchase </th>
			<th> Date Of return</th>
			<th> Delay by </th>
			<th> Status </th>
		</tr>
	</thead>

	<tbody>
		<%= render 'search' %>
		<% @records.each_with_index do |record, index| %>
		<tr  align="center" bgcolor="#CEF6F5" >
			<td><%= index+1 %> </td>
			<td> <%= link_to record.user.user_detail.full_name,
			request_send_notification_path(id:record.id) %> </td>
			<td> <%= record.user.user_detail.position %></td>
			<td> <%= record.cart_id%></td>
			<td> <%= record.product_name %></td>
			<td> <%= record.category.name%></td>
			<td> <%= record.quantity %></td>
			<td> <%= record.purchase_date %></td>
			<td> <%= record.return_item_date %> </td>
			<% record.delay_check%>
			<td> <%=record.delay_by_display%> </td>
			<% record.status %>
			<td><span class='<%= record.color%>'><%= record.item_recieve_status%> </td>
		</tr>
		<% end %>
	</tbody>
</table>