<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="data_tables">
	<thead>
		<tr>
			<th> Product </th>
			<th> Price/Unit</th>
			<th> Quantity</th>
			<th> Total </th>
			<th> Return Date</th>
			<th> Actions</th>
		</tr>
	</thead>

	<tbody>
		<% @items.each do |item| %>
		<tr>
			<td><%= item.product_name %> </td>
			<td> <%= item.product.price%></td>
			<td> <%= item.quantity %></td>
			<td> <%= item.total %></td>
			<td> <%= item.return_date %></td>
			<td> <%=request_item_link(item).html_safe%></td>
		</tr>
		<% end %>
	</tbody>
</table>
<%= link_to "Back", users_current_request_path, class:'btn btn-primary' %>