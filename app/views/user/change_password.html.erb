
<%= form_for @user, url:{action:'update_password'}, method:'post' do |f| -%>
  <%= f.label :current_password, "Current Password" %>
  <%= f.password_field :current_password %><br><i>(we need your current password to confirm your changes)</i><br>
  <%= f.label :password, "Password" %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation, "Confirm Password" %>
  <%= f.password_field :password_confirmation %><br>
  <%= f.submit "Change Password", :disable_with => 'processing...',class:'btn btn-primary' %>
<% end %>