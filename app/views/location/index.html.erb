<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="data_tables">
	<thead>
		<tr>
			<th> ID</th>
			<th> Location </th>
			<th> Description</th>
			<th> Action</th>
		</tr>
	</thead>

	<tbody>
		<% @location.each do |location| %>
		<tr>
			<td><%= location.id %> </td>
			<td><%= location.location_name %> </td>
			<td> <%= location.location_description %> </td>
			<td> <%= location_link(location).html_safe %> </td>
		</tr>
		<% end %>
	</tbody>
</table>
<%= location_new %>