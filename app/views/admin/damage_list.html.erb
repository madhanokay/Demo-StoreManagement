<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="data_tables">
	<thead>
		<tr>
			<th> Product </th>
			<th> Category </th>
			<th> Location</th>
			<th> Quantity</th>
			<th> Time </th>
			<th> Date </th>
		</tr>
	</thead>

	<tbody>
		<% @damage_list.each do |list| %>
		<tr align="center" bgcolor="#CEF6F5">
			<td><%= list.product.name %> </td>
			<td><%= list.category.name %> </td>
			<td><%= list.product.location.location_name %> </td>
			<td><%= list.quantity %> </td>
			<td><%=time_ago_in_words(list.created_at)%>&nbsp;ago</td>
			<td><%= list.created_at.strftime("%B %d, %Y") %> </td>
			<td> <%= damage_list_action(list).html_safe %> </td>
		</tr>
		<% end %>
	</tbody>
</table>