<div class ="span8 well">

	<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
		<thead>
			<th> User</th>
			<th> Product Name</th>
			<th> Quantity requested</th>
			<th> return Date</th>
			<th> Return Time </th>
		</thead>

		<% total_quantity = [] %>
		<tbody>
			<% @items.each do |item| %>
			<tr>
				<td><%= item.user.user_detail.full_name%></td>
				<td><%= item.product.name%></td>
				<% total_quantity << item.quantity %>
				<td><%= item.quantity%> </td>
				<td><%= item.return_date%> </td>
				<td> <%= item.date_status%></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	Total Quantity Requested :<%= total_quantity.sum %><br>
	Quantity Available :<%= @product.quantity %><br><br>
<strong>Item Available :<%= @product.quantity - total_quantity.sum %></strong>
</div>