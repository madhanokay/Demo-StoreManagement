<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="data_tables">
	<thead>
		<tr>
			<th> Product </th>
			<th> Quantity</th>
			<th> Total </th>
			<th> Action</th>
		</tr>
	</thead>

	<tbody>
		<% @items.each do |item| %>
		<tr>
			<td><%= item.product_name %> </td>
			<td> <%= item.quantity %></td>
			<td> <%= item.total %></td>
			<td> <%= item_action(item).html_safe %></td>
		</tr>
		<% end %>
	</tbody>
</table>