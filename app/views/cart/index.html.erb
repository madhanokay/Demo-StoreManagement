<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="data_tables">
	<thead>
		<tr>
			<th> Sl.No</th>
			<th> Total Price </th>
			<th> Status</th>
			<th> Action</th>
		</tr>
	</thead>

	<tbody>
		<% @carts.each_with_index do |cart, index| %>
		<% cart.total_price = cart.whole_price%>
		<tr>
			<td> <%= index+1 %> </td>
			<td><%= cart.total_price %> </td>
			<td> <% if cart.status == false %> <%='Not yet Submitted' %> <%end %> </td>
			<td> <%= link_to "Add items", item_index_path(id:cart.id) %> | <% if cart.total_price >0 %> <%= link_to "Submit", cart_submit_cart_path(id:cart.id) %> |<%end%>  <%= link_to 'delete', cart_delete_path(id:cart.id) %> </td>
		</tr>
		<% end %>
	</tbody>
</table>
<%= link_to 'Create a new cart', cart_create_cart_path, method:'post', class:'btn btn-primary' %>